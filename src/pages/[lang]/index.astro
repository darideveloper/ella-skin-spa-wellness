---
// Sections
import About from '../../components/sections/About.astro';
import Layout from '../../layouts/Layout.astro';
import Banner from '../../components/sections/Banner.astro';
import PostA from '../../components/ui/PostA.astro';
import PostB from '../../components/ui/PostB.astro';
import PostC from '../../components/ui/PostC.astro';
import Services from '../../components/sections/Services.astro';

// Libs
import { useTranslations } from '../../i18n/utils'
import { getStaticPathsLangs } from '../../libs/getStaticPaths'

// i18n
export const getStaticPaths = getStaticPathsLangs
const { lang } = Astro.params as any
const t = useTranslations(lang)
---

<Layout>
	<Banner />
	<About />

	<!-- Services Section -->
	<section class="container">
		<div class="text-center mb-16">
			<h2 class="font-title text-4xl text-brown mb-4">Nuestros Tratamientos</h2>
			<p class="font-sans text-black text-lg max-w-2xl mx-auto">
				Descubre la luminosidad de tu piel con nuestros tratamientos faciales especializados
			</p>
		</div>

		
	</section>

	<Services />

	<!-- Posts Section -->
	<section class="container">
		<div class="text-center mb-16">
			<h2 class="font-title text-4xl text-brown mb-4">Últimas Publicaciones</h2>
			<p class="font-sans text-black text-lg max-w-2xl mx-auto">
				Descubre consejos, tratamientos y novedades sobre belleza y bienestar
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			<PostA
				postName="Secretos para una Piel Radiante"
				postDescription="Descubre los mejores consejos y tratamientos para mantener tu piel saludable y radiante durante todo el año. Aprende sobre la importancia de la hidratación, protección solar y rutinas personalizadas."
				postAuthor="Dra. María González"
				date="15 de Enero, 2024"
				bannerImage="/imgs/gallery/img1.jpg"
			/>

			<PostB
				postName="Tratamientos Anti-Edad Avanzados"
				postDescription="Explora las últimas técnicas y tecnologías en tratamientos anti-edad. Desde radiofrecuencia hasta microdermoabrasión, conoce qué opciones son mejores para tu tipo de piel y edad."
				postAuthor="Lic. Ana Martínez"
				date="12 de Enero, 2024"
				bannerImage="/imgs/gallery/img2.jpg"
			/>

			<PostC
				postName="Bienestar Integral: Mente y Cuerpo"
				postDescription="El verdadero bienestar va más allá de la belleza exterior. Descubre cómo combinar tratamientos estéticos con técnicas de relajación y mindfulness para un bienestar integral."
				postAuthor="Psic. Laura Sánchez"
				date="10 de Enero, 2024"
				bannerImage="/imgs/gallery/img3.jpg"
			/>
		</div>
	</section>
</Layout>
