---
// Sections
import About from "../../components/sections/About.astro";
import Layout from "../../layouts/Layout.astro";
import Banner from "../../components/sections/Banner.astro";
import Services from "../../components/sections/Services.astro";
import Posts from "../../components/sections/Posts.astro";
import PageSEO from "../../components/utils/PageSEO.astro";

// Libs
import { useTranslations } from "../../i18n/utils";
import { getStaticPathsLangs } from "../../libs/getStaticPaths";

// i18n
export const getStaticPaths = getStaticPathsLangs;
const { lang } = Astro.params as any;
const t = useTranslations(lang);
---

<Layout>
  <!-- SEO -->
  <PageSEO currentPage="home" lang={lang} slot="seo" />

  <!-- Content -->
  <Banner />
  <About />
  <Services />
  <Posts limitPosts />
</Layout>
