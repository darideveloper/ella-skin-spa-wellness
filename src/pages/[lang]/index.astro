---
// Sections
import About from "../../components/sections/About.astro";
import Layout from "../../layouts/Layout.astro";
import Banner from "../../components/sections/Banner.astro";
import Post from "../../components/sections/Posts.astro";
import Services from "../../components/sections/Services.astro";

// Libs
import { useTranslations } from "../../i18n/utils";
import { getStaticPathsLangs } from "../../libs/getStaticPaths";
import Posts from "../../components/sections/Posts.astro";

// i18n
export const getStaticPaths = getStaticPathsLangs;
const { lang } = Astro.params as any;
const t = useTranslations(lang);
---

<Layout>
  <Banner />
  <About />

  <!-- Services Section -->
  <section class="container">
    <div class="text-center mb-16">
      <h2 class="font-title text-4xl text-brown mb-4">Nuestros Tratamientos</h2>
      <p class="font-sans text-black text-lg max-w-2xl mx-auto">
        Descubre la luminosidad de tu piel con nuestros tratamientos faciales
        especializados
      </p>
    </div>
  </section>

  <Services />
<Posts/>
</Layout>
