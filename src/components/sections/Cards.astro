---
import ServiceCard from '../../components/ui/ServiceCard.astro';
import Button from '../../components/ui/Button.astro';

import { useTranslations } from '../../i18n/utils';

const { lang } = Astro.params as any;
const t = useTranslations(lang);

// Obtenemos los servicios desde el archivo de traducci√≥n
const services = t('services'); // Esto es un array
const buttonTrue = t('buttonTrue.text');
const buttonFalse = t('buttonFalse.text');
---

<section class="container flex justify-center items-center">
  <div class="grid grid-cols-2 gap-x-8 gap-y-6">
    {services.map((service) => (
      <ServiceCard
        title={service.title}
        description={service.description}
        benefits={service.features}
      >
        <div class:list={["flex", "gap-3"]}>
            <Button text={buttonTrue} href="/servicios" isGhost />
            <Button text={buttonFalse} href="/servicios" isGhost={false} />
        </div>
      </ServiceCard>
    ))}
  </div>
</section>
