---
// react icons
import { FaBars } from "react-icons/fa6";

//import components
import ServiceCard from "../../components/ui/ServiceCard.astro";
import Button from "../../components/ui/Button.astro";

// Libs
import { useTranslations } from "../../i18n/utils";

// i18n
const { lang } = Astro.params as any;
const t = useTranslations(lang);

// obtenemos desde es o en
const services = t("services");
---

<section class:list={["container", "flex", "justify-center", "items-center"]}>
  <div
    class:list={[
      "grid",
      "sm:gap-y-10",
      "sm:grid-cols-1",
      "md:grid-cols-1",
      "lg:grid-cols-2",
      "lg:gap-x-12",
    ]}
  >
    {
      services.map(
        (service: {
          title: string;
          textButtonPrimary: string;
          textButtonSecond: string;
          description: string;
          features: string[];
          iconName: string;
        }) => (
          <ServiceCard
            title={service.title}
            textButtonPrimary="texto opcional"
            textButtonSecond="texto opcional"
            srcButtonPrimary="www.google.com"
            srcButtonSecond="www.google.com"
            description={service.description}
            benefits={service.features}
            iconName={service.iconName}
          />
        )
      )
    }
  </div>
</section>
