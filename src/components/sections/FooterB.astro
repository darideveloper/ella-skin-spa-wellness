---
// FooterB.astro - Centered Layout with Newsletter Signup
import { 
  PhoneIcon, 
  MailIcon, 
  LocationIcon, 
  ClockIcon,
  ArrowRightIcon,
  FacebookIcon, 
  InstagramIcon, 
  TwitterIcon, 
  YoutubeIcon,
  TiktokIcon 
} from '../ui/Icons';

// Footer data
const spaInfo = {
  name: "ELLA SKIN & SPA WELLNESS",
  tagline: "Bienestar • Belleza • Tranquilidad",
  description: "Tu destino para el cuidado personal y la relajación. Experimenta la excelencia en cada tratamiento."
}

const quickLinks = [
  { name: "Inicio", link: "#" },
  { name: "Servicios", link: "#" },
  { name: "Galería", link: "#" },
  { name: "Sobre Nosotros", link: "#" },
  { name: "Contacto", link: "#" },
  { name: "Reservas", link: "#" }
]

const contactInfo = [
  { icon: PhoneIcon, text: "+1 (555) 123-4567", link: "tel:+15551234567" },
  { icon: MailIcon, text: "info@ellaskinspa.com", link: "mailto:info@ellaskinspa.com" },
  { icon: LocationIcon, text: "123 Wellness Ave, Spa City, SC 12345", link: "#" },
  { icon: ClockIcon, text: "Lun-Sáb: 9AM-8PM | Dom: 10AM-6PM", link: "#" }
]

const socialNetworks = [
  { icon: FacebookIcon, name: "Facebook", link: "#", color: "hover:text-blue-600" },
  { icon: InstagramIcon, name: "Instagram", link: "#", color: "hover:text-pink-500" },
  { icon: TwitterIcon, name: "Twitter", link: "#", color: "hover:text-blue-400" },
  { icon: YoutubeIcon, name: "YouTube", link: "#", color: "hover:text-red-600" },
  { icon: TiktokIcon, name: "TikTok", link: "#", color: "hover:text-pink-400" }
]
---

<footer class="bg-gradient-to-b from-white to-pink-light">
  <!-- Main Footer Content -->
  <div class="container mx-auto px-6 py-16">
    <!-- Header Section -->
    <div class="text-center mb-16">
      <h3 class="text-4xl font-title text-brown mb-4">{spaInfo.name}</h3>
      <p class="text-xl text-brown-light mb-6">{spaInfo.tagline}</p>
      <p class="text-brown/80 max-w-2xl mx-auto leading-relaxed">{spaInfo.description}</p>
    </div>

    <!-- Newsletter Section -->
    <div class="bg-white/50 backdrop-blur-sm rounded-2xl p-8 mb-16 border border-brown/10">
      <div class="text-center max-w-md mx-auto">
        <h4 class="text-2xl font-title text-brown mb-4">Mantente Conectada</h4>
        <p class="text-brown/70 mb-6">Suscríbete para recibir ofertas especiales y consejos de bienestar.</p>
        <div class="flex space-x-2">
          <input 
            type="email" 
            placeholder="Tu email" 
            class="flex-1 px-4 py-3 rounded-lg border border-brown/20 focus:outline-none focus:border-brown/40 bg-white/80"
          />
          <button class="bg-brown text-white px-6 py-3 rounded-lg hover:bg-brown-light transition-colors duration-300 flex items-center space-x-2">
            <span>Suscribir</span>
            <ArrowRightIcon className="w-4 h-4" />
          </button>
        </div>
      </div>
    </div>

    <!-- Links & Contact Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
      <!-- Quick Links -->
      <div class="text-center md:text-left">
        <h4 class="text-xl font-title text-brown mb-6">Enlaces Rápidos</h4>
        <div class="grid grid-cols-2 gap-4">
          {quickLinks.map((link) => (
            <a 
              href={link.link}
              class="text-brown/80 hover:text-brown transition-colors duration-300 hover:underline"
            >
              {link.name}
            </a>
          ))}
        </div>
      </div>

      <!-- Contact Info -->
      <div class="text-center md:text-left">
        <h4 class="text-xl font-title text-brown mb-6">Información de Contacto</h4>
        <div class="space-y-4">
          {contactInfo.map((item) => (
            <a 
              href={item.link}
              class="flex items-center justify-center md:justify-start space-x-3 text-brown/80 hover:text-brown transition-colors duration-300 group"
            >
              <span class="text-brown-light group-hover:text-brown transition-colors duration-300">
                <item.icon className="w-5 h-5" />
              </span>
              <span class="text-sm">{item.text}</span>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Social Networks Section -->
    <div class="text-center mb-12">
      <h4 class="text-xl font-title text-brown mb-6">Síguenos en Redes Sociales</h4>
      <div class="flex justify-center space-x-6">
        {socialNetworks.map((social) => (
          <a 
            href={social.link}
            class:list={[
              'flex items-center justify-center',
              'w-14 h-14 rounded-full',
              'bg-white/50 border border-brown/20',
              'text-brown transition-all duration-300',
              'hover:bg-white hover:border-brown/40 hover:shadow-lg',
              'group',
              social.color
            ]}
            aria-label={social.name}
          >
            <social.icon className="w-6 h-6 group-hover:scale-110 transition-transform duration-300" />
          </a>
        ))}
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-brown/20 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-brown/70 text-sm">
          © 2024 {spaInfo.name}. Todos los derechos reservados.
        </p>
        <div class="flex flex-wrap justify-center gap-6 text-sm">
          <a href="#" class="text-brown/70 hover:text-brown transition-colors duration-300">Política de Privacidad</a>
          <a href="#" class="text-brown/70 hover:text-brown transition-colors duration-300">Términos de Servicio</a>
          <a href="#" class="text-brown/70 hover:text-brown transition-colors duration-300">Política de Cookies</a>
        </div>
      </div>
    </div>
  </div>
</footer> 