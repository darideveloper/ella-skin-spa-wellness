---
// About.astro - Card-based Layout Design
import AboutCard from '../ui/AboutCard.astro'
import Title from '../ui/Title.astro'

// Libs
import { useTranslations } from '../../i18n/utils'

// i18n
const { lang } = Astro.params as any
const t = useTranslations(lang)

// Card data
type CardData = {
  title: string
  description: string
  icon: string
  iconBg: string
  isDark: boolean
  align: string
  class: string
}

const cardsData: CardData[] = [
  {
    title: t('about.cards.mission.title'),
    description: t('about.cards.mission.description'),
    icon: 'check',
    iconBg: 'bg-gradient-to-br from-brown to-brown-light',
    isDark: false,
    align: 'center',
    class: '',
  },
  {
    title: t('about.cards.technology.title'),
    description: t('about.cards.technology.description'),
    icon: 'lightbulb',
    iconBg: 'bg-gradient-to-br from-pink to-pink-light',
    isDark: false,
    align: 'center',
    class: '',
  },
  {
    title: t('about.cards.team.title'),
    description: t('about.cards.team.description'),
    icon: 'users',
    iconBg: 'bg-gradient-to-br from-brown-light to-brown',
    isDark: false,
    align: 'center',
    class: '',
  },
  {
    title: t('about.cards.wellness.title'),
    description: t('about.cards.wellness.description'),
    icon: 'heart',
    iconBg: 'bg-gradient-to-br from-pink-light to-pink',
    isDark: false,
    align: 'center',
    class: 'lg:col-span-1',
  },
  {
    title: t('about.cards.experience.title'),
    description: t('about.cards.experience.description'),
    icon: 'star',
    iconBg: 'bg-white/80',
    isDark: true,
    align: 'left',
    class: 'col-span-1 md:col-span-2',
  },
]
---

<section
  class:list={['py-20', 'bg-gradient-to-b', 'from-white', 'to-pink-light']}
  id="about"
>
  <div class:list={['container', 'mx-auto', 'px-6']}>
    <!-- Header Section -->
    <div class:list={['text-center', 'mb-16']}>
      <Title text={t('about.title')} />
      <!-- Separator -->
      <div class:list={['w-24', 'h-1', 'bg-brown', 'mx-auto']}></div>
    </div>

    <!-- Main Content Grid -->
    <div
      class:list={[
        'grid',
        'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
        'gap-8',
        'max-w-7xl',
        'mx-auto',
      ]}
    >
      <!-- Dynamic Cards -->
      {
        cardsData.map((cardData: CardData) => (
          <AboutCard
            title={cardData.title}
            description={cardData.description}
            icon={cardData.icon}
            iconBg={cardData.iconBg}
            isDark={cardData.isDark}
            align={cardData.align as 'center' | 'left'}
            class={cardData.class}
          />
        ))
      }
    </div>
  </div>
</section>
