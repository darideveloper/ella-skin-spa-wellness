---
// About.astro - Card-based Layout Design
import AboutCard from '../ui/AboutCard.astro';

export interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "ELLA SKIN & SPA WELLNESS",
  subtitle = "Descubre el bienestar integral"
} = Astro.props;

// Card data
const cards = [
  {
    title: "Nuestra Misión",
    description: "En ELLA SKIN & SPA WELLNESS, misión es guiarte hacia el bienestar integral y la belleza.",
    icon: "heart",
    gradient: "bg-gradient-to-br from-brown to-brown-light"
  },
  {
    title: "Tecnología Avanzada",
    description: "He creado un espacio donde la tecnología de vanguardia y la calidez humana se fusionan para ofrecerte una experiencia de spa única y personalizada.",
    icon: "lightbulb",
    gradient: "bg-gradient-to-br from-pink to-pink-light"
  },
  {
    title: "Equipo Especializado",
    description: "Cuento con un equipo de especialistas apasionados que se dedican a salud y belleza, utilizando productos de alta calidad y técnicas avanzadas.",
    icon: "users",
    gradient: "bg-gradient-to-br from-brown-light to-brown"
  },
  {
    title: "Tu Bienestar",
    description: "Descubre un lugar para desconectar y reconectar contigo mismo. En ELLA SKIN & SPA WELLNESS, bienestar es mi prioridad.",
    icon: "heart",
    gradient: "bg-gradient-to-br from-pink-light to-pink",
    colSpan: "md:col-span-2 lg:col-span-1"
  }
];

// Experience card data
const experienceCard = {
  title: "Experiencia Única",
  description: "Cada visita a ELLA SKIN & SPA WELLNESS es una experiencia personalizada diseñada para tu bienestar integral. Nuestro compromiso es brindarte el cuidado que mereces en un ambiente de tranquilidad y excelencia.",
  icon: "star"
};
---

<section
  class:list={['py-20', 'bg-gradient-to-b from-white to-pink-light']}
>
  <div class:list={['container', 'mx-auto', 'px-6']}>
    <!-- Header Section -->
    <div class:list={['text-center', 'mb-16']}>
      <h1
        class:list={[
          'text-5xl md:text-6xl',
          'font-title',
          'text-brown',
          'mb-6',
        ]}
      >
        {title}
      </h1>
      <div class:list={['w-24', 'h-1', 'bg-brown', 'mx-auto']}></div>
    </div>

    <!-- Main Content Grid -->
    <div
      class:list={[
        'grid',
        'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
        'gap-8',
        'max-w-7xl',
        'mx-auto',
      ]}
    >
      <!-- Dynamic Cards -->
      {cards.map((card) => (
        <AboutCard
          title={card.title}
          description={card.description}
          icon={card.icon}
          gradient={card.gradient}
          colSpan={card.colSpan}
        />
      ))}

      <!-- Experience Card -->
      <div
        class:list={[
          'bg-gradient-to-br from-brown to-brown-light',
          'rounded-2xl',
          'p-8',
          'shadow-lg',
          'text-white',
          'md:col-span-2 lg:col-span-2',
        ]}
      >
        <div class:list={['flex items-center', 'mb-6']}>
          <div
            class:list={[
              'w-16',
              'h-16',
              'bg-white/20',
              'rounded-full',
              'flex items-center justify-center',
              'mr-6',
            ]}
          >
            <svg
              class:list={['w-8', 'h-8', 'text-white']}
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z'
              ></path>
            </svg>
          </div>
          <h3 class:list={['text-3xl', 'font-title']}>{experienceCard.title}</h3>
        </div>
        <p
          class:list={['text-lg', 'font-sans', 'leading-relaxed', 'opacity-90']}
        >
          {experienceCard.description}
        </p>
      </div>
    </div>
  </div>
</section>

