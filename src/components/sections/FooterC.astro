---
// FooterC.astro - Minimal Elegant Design with Floating Social
import { 
  PhoneIcon, 
  MailIcon, 
  LocationIcon, 
  ClockIcon,
  MenuIcon,
  FacebookIcon, 
  InstagramIcon, 
  TwitterIcon, 
  YoutubeIcon 
} from '../ui/Icons';

// Footer data
const spaInfo = {
  name: "ELLA SKIN & SPA WELLNESS",
  tagline: "Donde el bienestar encuentra su hogar",
  description: "Un espacio dedicado a tu salud, belleza y tranquilidad. Cada visita es una experiencia transformadora."
}

const services = [
  "Tratamientos Faciales",
  "Masajes Terapéuticos", 
  "Terapias Corporales",
  "Consultas de Belleza",
  "Tratamientos Anti-Aging",
  "Masajes Relajantes"
]

const contactInfo = [
  { icon: PhoneIcon, text: "+1 (555) 123-4567", link: "tel:+15551234567" },
  { icon: MailIcon, text: "info@ellaskinspa.com", link: "mailto:info@ellaskinspa.com" },
  { icon: LocationIcon, text: "123 Wellness Ave, Spa City, SC 12345", link: "#" },
  { icon: ClockIcon, text: "Lun-Sáb: 9AM-8PM | Dom: 10AM-6PM", link: "#" }
]

const socialNetworks = [
  { icon: FacebookIcon, name: "Facebook", link: "#" },
  { icon: InstagramIcon, name: "Instagram", link: "#" },
  { icon: TwitterIcon, name: "Twitter", link: "#" },
  { icon: YoutubeIcon, name: "YouTube", link: "#" }
]
---

<footer class="relative bg-gradient-to-t from-brown to-brown-light text-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, white 2px, transparent 2px); background-size: 50px 50px;"></div>
  </div>

  <!-- Main Footer Content -->
  <div class="container mx-auto px-6 py-16 relative z-10">
    <!-- Top Section - Split Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
      <!-- Left Side - Brand & Description -->
      <div class="space-y-8">
        <div>
          <h3 class="text-4xl font-title text-white mb-4">{spaInfo.name}</h3>
          <p class="text-xl text-pink-light mb-6">{spaInfo.tagline}</p>
          <p class="text-white/90 leading-relaxed max-w-lg">{spaInfo.description}</p>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h4 class="text-lg font-title text-white mb-6">Contacto</h4>
          <div class="space-y-3">
            {contactInfo.map((item) => (
              <a 
                href={item.link}
                class="flex items-center space-x-3 text-white/80 hover:text-white transition-colors duration-300 group"
              >
                <span class="text-brown-light group-hover:text-white transition-colors duration-300">
                  <item.icon className="w-4 h-4" />
                </span>
                <span class="text-sm">{item.text}</span>
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Right Side - Services & Social -->
      <div class="space-y-8">
        <!-- Services -->
        <div>
          <h4 class="text-lg font-title text-white mb-6">Nuestros Servicios</h4>
          <div class="grid grid-cols-2 gap-3">
            {services.map((service) => (
              <a 
                href="#"
                class="text-white/80 hover:text-white transition-colors duration-300 text-sm hover:underline"
              >
                {service}
              </a>
            ))}
          </div>
        </div>

        <!-- Social Networks -->
        <div>
          <h4 class="text-lg font-title text-white mb-6">Conecta con Nosotros</h4>
          <div class="flex space-x-4">
            {socialNetworks.map((social) => (
              <a 
                href={social.link}
                class="flex items-center justify-center w-12 h-12 rounded-full bg-white/10 border border-white/20 text-white transition-all duration-300 hover:bg-white/20 hover:border-white/40 hover:scale-110 group"
                aria-label={social.name}
              >
                <social.icon className="w-5 h-5 group-hover:scale-110 transition-transform duration-300" />
              </a>
            ))}
          </div>
        </div>

        <!-- Call to Action -->
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
          <h4 class="text-lg font-title text-white mb-3">¿Lista para tu experiencia?</h4>
          <p class="text-white/80 text-sm mb-4">Reserva tu cita hoy y descubre la transformación que mereces.</p>
          <button class="bg-white text-brown px-6 py-2 rounded-lg hover:bg-pink-light transition-all duration-300 font-medium">
            Reservar Ahora
          </button>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-white/20 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-white/70 text-sm">
          © 2024 {spaInfo.name}. Todos los derechos reservados.
        </p>
        <div class="flex flex-wrap justify-center gap-6 text-sm">
          <a href="#" class="text-white/70 hover:text-white transition-colors duration-300">Privacidad</a>
          <a href="#" class="text-white/70 hover:text-white transition-colors duration-300">Términos</a>
          <a href="#" class="text-white/70 hover:text-white transition-colors duration-300">Cookies</a>
          <a href="#" class="text-white/70 hover:text-white transition-colors duration-300">Accesibilidad</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Floating Social Media Bar (Mobile) -->
  <div class="lg:hidden fixed bottom-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-t border-brown/20 z-50">
    <div class="flex justify-around py-3">
      {socialNetworks.map((social) => (
        <a 
          href={social.link}
          class="flex flex-col items-center space-y-1 text-brown hover:text-brown-light transition-colors duration-300"
          aria-label={social.name}
        >
          <social.icon className="w-5 h-5" />
          <span class="text-xs">{social.name}</span>
        </a>
      ))}
    </div>
  </div>
</footer> 