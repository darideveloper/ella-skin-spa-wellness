---
import { HiPaperAirplane } from 'react-icons/hi'

// Libs
import { useTranslations } from '../../i18n/utils'

// Data imports
import { contactData } from '../../data/contact'

// i18n
const { lang } = Astro.params as any
const t = useTranslations(lang)

// Contact info with translations
const contactInfo = Object.keys(contactData).map((key) => ({
  key: key,
  icon: contactData[key as keyof typeof contactData].icon,
  text: t(`footer.contact.${key}`),
  link: contactData[key as keyof typeof contactData].link,
}))
---

<section
  id='ContactFormB'
  class:list={['py-20', 'bg-white', 'relative']}
>
  <div class:list={['container', 'relative', 'z-10']}>
    <div class:list={['text-center', 'mb-16']}>
      <h2 class:list={['font-title', 'text-5xl', 'text-brown', 'mb-6']}>
        {t('contact.title')}
      </h2>
      <p
        class:list={[
          'font-sans',
          'text-black',
          'text-xl',
          'max-w-3xl',
          'mx-auto',
          'leading-relaxed',
        ]}
      >
        {t('contact.description')}
      </p>
    </div>

    <div
      class:list={[
        'grid',
        'grid-cols-1',
        'lg:grid-cols-2',
        'gap-12',
        'max-w-6xl',
        'mx-auto',
      ]}
    >
      <!-- Contact Information Card -->
      <div
        class:list={[
          'bg-gradient-to-br',
          'from-brown',
          'to-brown-light',
          'text-white',
          'p-12',
          'rounded-3xl',
          'shadow-2xl',
          'relative',
          'overflow-hidden',
        ]}
      >
        <!-- Background decoration -->
        <div
          class:list={[
            'absolute',
            'top-0',
            'right-0',
            'w-32',
            'h-32',
            'bg-white/10',
            'rounded-full',
            '-translate-y-16',
            'translate-x-16',
          ]}
        >
        </div>

        <h3 class:list={['font-title', 'text-3xl', 'mb-8', 'relative', 'z-10']}>
          {t('contact.info.title')}
        </h3>

        <div class:list={['space-y-6', 'relative', 'z-10']}>
          {
            contactInfo.map((item) => (
              <a
                href={item.link}
                class:list={[
                  'flex',
                  'items-center',
                  'space-x-4',
                  'text-white/90',
                  'hover:text-white',
                  'duration-300',
                  'group',
                  'transition-all',
                ]}
                target='_blank'
                rel='noopener noreferrer'
              >
                <div
                  class:list={[
                    'bg-white/20',
                    'p-3',
                    'rounded-full',
                    'group-hover:bg-white/30',
                    'transition-all',
                    'duration-300',
                  ]}
                >
                  <item.icon class:list={['w-6', 'h-6']} />
                </div>
                <div>
                  <p class:list={['font-semibold', '!mb-0']}>
                    {t(`contact.info.${item.key}`)}
                  </p>
                  <p
                    class:list={[
                      'text-white/90',
                      'group-hover:text-white',
                      'transition-colors',
                      'duration-300',
                    ]}
                  >
                    {item.text}
                  </p>
                </div>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Contact Form Card -->
      <div
        class:list={[
          'bg-white',
          'border-2',
          'border-brown-light/20',
          'rounded-3xl',
          'p-12',
          'shadow-xl',
          'relative',
        ]}
      >
        <h3 class:list={['font-title', 'text-3xl', 'text-brown', 'mb-8']}>
          {t('contact.subtitle')}
        </h3>

        <form class:list={['space-y-6']}>
          <!-- Name Field -->
          <div>
            <label
              for='name-b'
              class:list={['block', 'text-brown', 'font-medium', 'mb-2']}
            >
              {t('contact.form.name')} *
            </label>
            <div class:list={['relative']}>
              <input
                type='text'
                id='name-b'
                name='name'
                required
                class:list={[
                  'w-full',
                  'px-4',
                  'py-3',
                  'border-2',
                  'border-brown-light/30',
                  'rounded-lg',
                  'text-black',
                  'placeholder-brown-light/50',
                  'focus:outline-none',
                  'focus:border-brown',
                  'focus:ring-4',
                  'focus:ring-brown/10',
                  'transition-all',
                  'duration-300',
                  'font-sans',
                ]}
                placeholder={t('contact.form.placeholder.name')}
              />
            </div>
          </div>

          <!-- Email Field -->
          <div>
            <label
              for='email-b'
              class:list={['block', 'text-brown', 'font-medium', 'mb-2']}
            >
              {t('contact.form.email')} *
            </label>
            <div class:list={['relative']}>
              <input
                type='email'
                id='email-b'
                name='email'
                required
                class:list={[
                  'w-full',
                  'px-4',
                  'py-3',
                  'border-2',
                  'border-brown-light/30',
                  'rounded-lg',
                  'text-black',
                  'placeholder-brown-light/50',
                  'focus:outline-none',
                  'focus:border-brown',
                  'focus:ring-4',
                  'focus:ring-brown/10',
                  'transition-all',
                  'duration-300',
                  'font-sans',
                ]}
                placeholder={t('contact.form.placeholder.email')}
              />
            </div>
          </div>

          <!-- Phone Field -->
          <div>
            <label
              for='phone-b'
              class:list={['block', 'text-brown', 'font-medium', 'mb-2']}
            >
              {t('contact.form.phone')} *
            </label>
            <div class:list={['relative']}>
              <input
                type='tel'
                id='phone-b'
                name='phone'
                required
                class:list={[
                  'w-full',
                  'px-4',
                  'py-3',
                  'border-2',
                  'border-brown-light/30',
                  'rounded-lg',
                  'text-black',
                  'placeholder-brown-light/50',
                  'focus:outline-none',
                  'focus:border-brown',
                  'focus:ring-4',
                  'focus:ring-brown/10',
                  'transition-all',
                  'duration-300',
                  'font-sans',
                ]}
                placeholder={t('contact.form.placeholder.phone')}
              />
            </div>
          </div>

          <!-- Message Field -->
          <div>
            <label
              for='message-b'
              class:list={['block', 'text-brown', 'font-medium', 'mb-2']}
            >
              {t('contact.form.message')}
            </label>
            <div class:list={['relative']}>
              <textarea
                id='message-b'
                name='message'
                rows='4'
                class:list={[
                  'w-full',
                  'px-4',
                  'py-3',
                  'border-2',
                  'border-brown-light/30',
                  'rounded-lg',
                  'text-black',
                  'placeholder-brown-light/50',
                  'focus:outline-none',
                  'focus:border-brown',
                  'focus:ring-4',
                  'focus:ring-brown/10',
                  'transition-all',
                  'duration-300',
                  'font-sans',
                  'resize-none',
                ]}
                placeholder={t('contact.form.placeholder.message')}
              ></textarea>
            </div>
          </div>

          <!-- Submit Button -->
          <button
            type='submit'
            class:list={[
              'w-full',
              'bg-brown',
              'text-white',
              'px-8',
              'py-4',
              'rounded-xl',
              'font-sans',
              'font-semibold',
              'text-lg',
              'shadow-lg',
              'hover:bg-brown-light',
              'transform',
              'hover:scale-[1.02]',
              'transition-all',
              'duration-300',
              'focus:outline-none',
              'focus:ring-4',
              'focus:ring-brown/20',
              'flex',
              'items-center',
              'justify-center',
              'space-x-2',
            ]}
          >
            <span>{t('contact.form.submit')}</span>
            <HiPaperAirplane class:list={['w-5', 'h-5']} />
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
