---
interface Props {
  title: string;
  description: string;
  highlights?: string[];
  class?: string;
}

const {
  title,
  description,
  highlights = [],
  class: className = "",
} = Astro.props as Props;
---

<div
  class:list={[
    "bg-white",
    "border-l-4",
    "border-brown",
    "p-6",
    "rounded-lg",
    "shadow-md",
    "hover:shadow-lg",
    "transition-all",
    "duration-300",
    "max-w-sm",
    "mx-auto",
    "group",
    className,
  ]}
>
  <!-- Header -->
  <div class="mb-4">
    <h3 class="font-title text-xl text-brown mb-2 group-hover:text-brown-light transition-colors duration-200">
      {title}
    </h3>
    <div class="w-12 h-0.5 bg-pink-light rounded-full"></div>
  </div>
  
  <!-- Description -->
  <p class="font-sans text-black text-sm leading-relaxed mb-4">
    {description}
  </p>
  
  <!-- Highlights -->
  {highlights.length > 0 && (
    <div class="mb-4">
      <h4 class="font-sans text-sm font-semibold text-brown mb-2">Beneficios:</h4>
      <div class="grid grid-cols-1 gap-1">
        {highlights.map((highlight) => (
          <div class="flex items-center font-sans text-xs text-black">
            <svg class="w-3 h-3 text-pink mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            {highlight}
          </div>
        ))}
      </div>
    </div>
  )}
  
  <!-- Footer -->
  <div class="flex justify-between items-center pt-4 border-t border-pink-light">
    <span class="font-sans text-xs text-brown-light">ELLA SKIN & SPA</span>
    <button class="bg-brown text-white font-sans px-4 py-2 rounded-md hover:bg-brown-light transition-colors duration-200 text-xs font-medium">
      Ver Detalles
    </button>
  </div>
</div> 