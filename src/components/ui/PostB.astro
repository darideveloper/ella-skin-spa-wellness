---
// Props
export interface Props {
  postName: string
  postDescription: string
  postAuthor: string
  date: string
  bannerImage: string
  class?: string
}

const {
  postName,
  postDescription,
  postAuthor,
  date,
  bannerImage,
  class: className = '',
} = Astro.props
---

<div
  class:list={[
    'bg-white',
    'border-l-4',
    'border-brown',
    'rounded-r-xl',
    'overflow-hidden',
    'shadow-md hover:shadow-lg',
    'transition-all',
    'duration-300',
    'hover:border-brown-light',
    'group',
    'relative',
    className,
  ]}
>
  <!-- Banner Image -->
  <div class="relative h-40 overflow-hidden">
    <img
      src={bannerImage}
      alt={postName}
      class:list={[
        'w-full',
        'h-full',
        'object-cover',
        'group-hover:scale-105',
        'transition-transform',
        'duration-700',
      ]}
    />
    <div
      class:list={[
        'absolute',
        'top-0',
        'left-0',
        'w-full',
        'h-full',
        'bg-gradient-to-b',
        'from-transparent',
        'via-transparent',
        'to-white/80',
      ]}
    ></div>
  </div>

  <!-- Content -->
  <div class="p-6 relative z-10">
    <!-- Decorative element -->
    <div
      class:list={[
        'absolute',
        'top-0',
        'right-0',
        'w-20',
        'h-20',
        'bg-pink-light',
        'rounded-bl-full',
        'opacity-20',
        'group-hover:opacity-30',
        'transition-opacity',
        'duration-300',
      ]}
    ></div>

    <!-- Content -->
    <div class="relative z-10">
      <!-- Meta info -->
      <div class="flex items-center justify-between mb-3">
        <span
          class:list={[
            'text-xs',
            'font-medium',
            'text-brown-light',
            'uppercase',
            'tracking-wide',
          ]}
        >
          {date}
        </span>
        <div
          class:list={[
            'px-3',
            'py-1',
            'bg-pink',
            'text-brown',
            'text-xs',
            'font-medium',
            'rounded-full',
          ]}
        >
          Blog
        </div>
      </div>

      <!-- Title -->
      <h3
        class:list={[
          'text-2xl',
          'font-title',
          'text-brown',
          'mb-3',
          'group-hover:text-brown-light',
          'transition-colors',
          'duration-300',
        ]}
      >
        {postName}
      </h3>

      <!-- Description -->
      <p
        class:list={[
          'text-black',
          'leading-relaxed',
          'mb-4',
          'text-sm',
        ]}
      >
        {postDescription}
      </p>

      <!-- Author -->
      <div class="flex items-center gap-3">
        <div
          class:list={[
            'w-8',
            'h-8',
            'bg-brown',
            'rounded-full',
            'flex',
            'items-center',
            'justify-center',
            'text-white',
            'text-sm',
            'font-medium',
          ]}
        >
          {postAuthor.charAt(0).toUpperCase()}
        </div>
        <div>
          <p class="text-sm font-medium text-brown">{postAuthor}</p>
          <p class="text-xs text-brown-light">Autor</p>
        </div>
      </div>
    </div>
  </div>
</div> 