---
interface Props {
  title: string;
  imgSrc: string;
  imgAlt: string;
  text: string;
  class?: string;
}

const {
  title,
  imgSrc,
  imgAlt,
  text,
  class: className = "",
} = Astro.props as Props;
---

<div
  class:list={[
    "bg-white",
    "flex",
    "flex-col",
    "justify-center",
    "items-center",
    "w-80",
    "h-full",
    "sm:flex-row",
    "sm:justify-center",
    "sm:items-center",
    "sm:w-[700px]",
    "sm:h-[300px]",
    "sm:p-12",
    "rounded-3xl",
    className,
  ]}
>
  <div
    class:list={[
      "flex",
      "flex-col",
      "gap-5",
      "text-end",
      "rotate-90",
      "sm:rotate-90"
    ]}
  >
    <div
      class:list={[
        "w-45 h-50",
        "rounded-tl-[70%] rounded-bl-[0px]",
        "overflow-hidden",
        "rotate-180",
        "sm:w-55 sm:h-55",
        "sm:rounded-tl-[70%] sm:rounded-bl-[5px] sm:rounded-tr-[10px] sm:rounded-br-[10px]",
        "sm:rotate-180"
      ]}
    >
      <img
        src={imgSrc}
        alt={imgAlt}
        class:list={[
          "w-full",
          "h-full",
          "object-cover",
          "rotate-90",
          "sm:rotate-90"
        ]}
      />
    </div>
    <div class:list={["w-[130px]"]}>
      <h3
        class:list={[
          "font-title",
          "text-[13px]",
          "tracking-[2px]",
          "rotate-180",
          "sm:rotate-",
          "sm:text-[16px]",
          "text-end",
        ]}
      >
        {title}
      </h3>
    </div>
  </div>

  <div class:list={["text-[11px]", "px-6", "sm:ml-16", "sm:px-0"]}>
    <p>{text}</p>
  </div>
</div>
