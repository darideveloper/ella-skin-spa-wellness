---
// Icons
import { HiHeart, HiLightBulb, HiUsers, HiStar } from 'react-icons/hi'

// Props
export interface Props {
  title: string
  description: string
  icon: string
  gradient: string
  colSpan?: string
  isDark?: boolean
  class?: string
}

const {
  title,
  description,
  icon,
  gradient,
  colSpan = '',
  isDark = false,
  class: className = '',
} = Astro.props

// Component icon options
const icons = {
  heart: HiHeart,
  lightbulb: HiLightBulb,
  users: HiUsers,
  star: HiStar,
}

const SelectedIcon = icons[icon as keyof typeof icons] || HiHeart
---

<div
  class:list={[
    isDark
      ? 'bg-gradient-to-br from-brown to-brown-light text-white'
      : 'bg-white border border-pink/20',
    'rounded-2xl',
    'p-8',
    'shadow-lg hover:shadow-xl',
    'transition-all',
    'duration-300',
    'hover:-translate-y-2',
    'group',
    colSpan,
    className,
  ]}
>
  <div
    class:list={[
      'w-16',
      'h-16',
      isDark ? 'bg-white/20' : gradient,
      'rounded-full',
      'flex items-center justify-center',
      'mb-6',
      'mx-auto',
    ]}
  >
    <span
      class:list={[
        'text-3xl group-hover:text-5xl',
        'text-white',
        'duration-700',
        'group-hover:rotate-[360deg]',
      ]}
    >
      <SelectedIcon />
    </span>
  </div>
  <h3
    class:list={[
      'text-2xl',
      'font-title',
      isDark ? 'text-white' : 'text-brown',
      'mb-4',
      'text-center',
    ]}
  >
    {title}
  </h3>
  <p
    class:list={[
      'leading-relaxed',
      isDark ? 'text-white opacity-90' : 'text-black',
    ]}
  >
    {description}
  </p>
</div>
