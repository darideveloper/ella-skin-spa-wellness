---
// AboutCard.astro - Reusable card component for About section
import { HiHeart, HiLightBulb, HiUsers, HiStar } from 'react-icons/hi';

export interface Props {
  title: string;
  description: string;
  icon: string;
  gradient: string;
  colSpan?: string;
  isDark?: boolean;
}

const { title, description, icon, gradient, colSpan = '', isDark = false } = Astro.props;

// Icon mapping using React Icons
const icons = {
  heart: HiHeart,
  lightbulb: HiLightBulb,
  users: HiUsers,
  star: HiStar
};

const SelectedIcon = icons[icon as keyof typeof icons] || HiHeart;
---

<div
  class:list={[
    isDark ? 'bg-gradient-to-br from-brown to-brown-light text-white' : 'bg-white border border-pink/20',
    'rounded-2xl',
    'p-8',
    'shadow-lg',
    'hover:shadow-xl',
    'transition-all duration-300',
    'transform hover:-translate-y-2',
    colSpan,
  ]}
>
  <div
    class:list={[
      'w-16',
      'h-16',
      isDark ? 'bg-white/20' : gradient,
      'rounded-full',
      'flex items-center justify-center',
      'mb-6',
      'mx-auto',
    ]}
  >
    <SelectedIcon className="w-8 h-8 text-white" />
  </div>
  <h3
    class:list={[
      'text-2xl',
      'font-title',
      isDark ? 'text-white' : 'text-brown',
      'mb-4',
      'text-center',
    ]}
  >
    {title}
  </h3>
  <p class:list={[
    'font-sans', 
    'leading-relaxed',
    isDark ? 'text-white opacity-90' : 'text-black'
  ]}>
    {description}
  </p>
</div> 