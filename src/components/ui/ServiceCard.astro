---
import type { IconType } from 'react-icons';
import { FaBars } from "react-icons/fa6";

interface Props {
  title: string;
  description: string;
  benefits?: string[];
  class?: string;
  icon: IconType;
}

const {
  title,
  description,
  benefits = [],
  icon: Icon,
  class: className = "",
} = Astro.props as Props;
---

<article
  class:list={[
    "relative",
    "bg-white",
    "p-8",
    "rounded-3xl",
    "shadow-xl hover:shadow-2xl",
    "transition-all",
    "duration-500",
    "max-w-md",
    "mx-auto",
    "overflow-hidden",
    "group",
    className,
  ]}
>
  <!-- Background decorative circle -->
  <div
    class:list={[
      "absolute",
      "-top-8",
      "-right-8",
      "w-32",
      "h-32",
      "bg-gradient-to-br",
      "from-pink",
      "to-pink-light",
      "rounded-full",
      "opacity-10 group-hover:opacity-20",
      "transition-opacity",
      "duration-500",
    ]}
  >
  </div>

  <!-- Content -->
  <div class:list={["relative", "z-10"]}>
    <!-- Icon placeholder -->
    <div
      class:list={[
        "w-16",
        "h-16",
        "bg-gradient-to-br",
        "from-brown",
        "to-brown-light",
        "rounded-2xl",
        "flex",
        "items-center",
        "justify-center",
        "mb-6",
        "group-hover:scale-110",
        "transition-transform",
        "duration-300",
      ]}
    >
      <span class:list={["text-white", "text-3xl"]}>
        <Icon />
      </span>
    </div>

    <!-- Title -->
    <h3
      class:list={[
        "font-title",
        "text-2xl",
        "text-brown group-hover:text-brown-light",
        "mb-4",
        "leading-tight",
        "transition-colors",
        "duration-300",
      ]}
    >
      {title}
    </h3>

    <!-- Description -->
    <p class:list={["text-black text-sm", "leading-relaxed", "mb-6"]}>
      {description}
    </p>

    <!-- Benefits -->
    {
      benefits.length > 0 && (
        <div class:list={["mb-6"]}>
          <h4
            class:list={["font-sans", "text-sm", "font-semibold", "text-brown", "mb-3"]}
          >
            Incluye:
          </h4>
          <div class:list={["space-y-2"]}>
            {benefits.map((benefit) => (
              <div
                class:list={[
                  "flex",
                  "items-start",
                  "font-sans",
                  "text-xs", 
                  "text-black",
                ]}
              >
                <div
                  class:list={[
                    "w-1.5",
                    "h-1.5",
                    "bg-pink",
                    "rounded-full",
                    "mt-1.5",
                    "mr-3",
                    "flex-shrink-0",
                  ]}
                />
                <span>{benefit}</span>
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Section Buttons-->
    <slot></slot>
  </div>
</article>
