---
// Props
export interface Props {
  postName: string
  postDescription: string
  postAuthor: string
  date: string
  bannerImage: string
  class?: string
}

const {
  postName,
  postDescription,
  postAuthor,
  date,
  bannerImage,
  class: className = '',
} = Astro.props
---

<article
  class:list={[
    'bg-gradient-to-br from-brown to-brown-light',
    'text-white',
    'rounded-3xl',
    'overflow-hidden',
    'shadow-xl hover:shadow-2xl',
    'transition-all',
    'duration-500',
    'hover:scale-105',
    'group',
    'relative',
    className,
  ]}
>
  <!-- Banner Image -->
  <div class="relative h-56 overflow-hidden">
    <img
      src={bannerImage}
      alt={postName}
      class:list={[
        'w-full',
        'h-full',
        'object-cover',
        'group-hover:scale-110',
        'transition-transform',
        'duration-700',
      ]}
    />
    <div
      class:list={[
        'absolute',
        'inset-0',
        'bg-gradient-to-t',
        'from-brown/80',
        'via-brown/40',
        'to-transparent',
      ]}
    ></div>
  </div>
  <!-- Background pattern -->
  <div
    class:list={[
      'absolute',
      'inset-0',
      'bg-pink-light',
      'opacity-5',
      'group-hover:opacity-10',
      'transition-opacity',
      'duration-500',
    ]}
    style="background-image: radial-gradient(circle at 25% 25%, currentColor 1px, transparent 1px), radial-gradient(circle at 75% 75%, currentColor 1px, transparent 1px); background-size: 20px 20px;"
  ></div>

  <!-- Content -->
  <div class="relative z-10 p-8">
    <!-- Date badge -->
    <div
      class:list={[
        'inline-block',
        'px-4',
        'py-2',
        'bg-white/20',
        'backdrop-blur-sm',
        'rounded-full',
        'text-sm',
        'font-medium',
        'mb-6',
        'border',
        'border-white/30',
      ]}
    >
      {date}
    </div>

    <!-- Title -->
    <h3
      class:list={[
        'text-3xl',
        'font-title',
        'text-white',
        'mb-4',
        'leading-tight',
        'group-hover:text-pink-light',
        'transition-colors',
        'duration-300',
      ]}
    >
      {postName}
    </h3>

    <!-- Description -->
    <p
      class:list={[
        'text-white/90',
        'leading-relaxed',
        'mb-6',
        'text-lg',
      ]}
    >
      {postDescription}
    </p>

    <!-- Author section -->
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div
          class:list={[
            'w-12',
            'h-12',
            'bg-white/20',
            'backdrop-blur-sm',
            'rounded-full',
            'flex',
            'items-center',
            'justify-center',
            'text-white',
            'text-lg',
            'font-bold',
            'border',
            'border-white/30',
          ]}
        >
          {postAuthor.charAt(0).toUpperCase()}
        </div>
        <div>
          <p class="font-medium text-white">{postAuthor}</p>
          <p class="text-sm text-white/70">Escritor</p>
        </div>
      </div>

      <!-- Read more button -->
      <button
        class:list={[
          'px-6',
          'py-3',
          'bg-white/20',
          'backdrop-blur-sm',
          'text-white',
          'font-medium',
          'rounded-full',
          'border',
          'border-white/30',
          'hover:bg-white/30',
          'hover:border-white/50',
          'transition-all',
          'duration-300',
          'flex',
          'items-center',
          'gap-2',
        ]}
      >
        Leer
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>
  </div>
</article> 