---
// Fonts
import '@fontsource-variable/playfair-display'
import '@fontsource-variable/dm-sans'

// import tailwind css
import "../styles/global.css";

// Footer components
import FooterA from '../components/sections/FooterA.astro';
import FooterB from '../components/sections/FooterB.astro';
import FooterC from '../components/sections/FooterC.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<main>
			<slot />
		</main>
		
		<!-- Footer Section -->
		<div class="space-y-0">
			<!-- Footer A - Modern Grid Layout -->
			<FooterA />
			
			<!-- Footer B - Centered Newsletter Design -->
			<FooterB />
			
			<!-- Footer C - Minimal Elegant Design -->
			<FooterC />
		</div>
	</body>
</html>
